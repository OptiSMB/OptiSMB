@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form asp-controller="Account" asp-action="Login" method="post">
    <div class="form-group">
        <label for="Username" class="form-label">Username</label>
        <input type="text" id="Username" name="Username" class="form-control" placeholder="Enter your username" required/>
    </div>
    <div class="form-group mt-3">
        <label for="Password" class="form-label">Password</label>
        <input type="password" id="Password" name="Password" class="form-control" placeholder="Enter your password" required/>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Login</button>
</form>
<div class="mt-3">
    <p>Don't own an organization? Start creating one now!</p>
    <form asp-controller="OrganizationOnboard" asp-action="Index" method="get">
        <button type="submit" class="btn-dark">Create Organization</button>
    </form>
</div>
<div class="mt-3">
    <p>Want to onboard business partner or employee?</p>
    <form asp-controller="SignUp" asp-action="Index" method="get">
        <button type="submit" class="btn-dark">Add Partner Or Employee</button>
    </form>
</div>